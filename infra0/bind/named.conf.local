acl trusted { 172.16.1.0/24; 172.16.2.0/24; localhost; };

view "internal" {

	match-clients { trusted; };

	recursion yes;

	zone "dorayaki.org" {
		type master;
		file "/etc/bind/zones/db.internal.dorayaki.org";
		allow-transfer { none; };
	};
};

view "external" {

    match-clients { any; };

    recursion yes;

    zone "dorayaki.org" {
		type master;
		file "/etc/bind/zones/db.external.dorayaki.org";
		allow-transfer { none; };
	};
};